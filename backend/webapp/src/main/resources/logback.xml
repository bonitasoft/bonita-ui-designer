<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <if condition='isDefined("catalina.base")'>
        <then>
            <appender name="LOGFILE" class="ch.qos.logback.core.FileAppender">
                <file>${catalina.base}/logs/ui-designer.log</file>
                <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                    <fileNamePattern>ui-designer.%d{yyyy-MM-dd}.log.zip</fileNamePattern>
                </rollingPolicy>
                <encoder>
                    <pattern>%date{HH:mm:ss} [%thread] %-5level %logger{16} - %msg%n%rEx</pattern>
                </encoder>
            </appender>

            <root level="INFO">
                <appender-ref ref="LOGFILE"/>
            </root>
        </then>
        <else>
            <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
                <encoder>
                    <pattern>%date{HH:mm:ss} [%thread] %-5level %logger{16} - %msg%n%rEx</pattern>
                </encoder>
            </appender>

            <root level="INFO">
                <appender-ref ref="CONSOLE"/>
            </root>
        </else>
    </if>

    <logger name="org.bonitasoft.web.designer" level="TRACE"/>

</configuration>
