{
  "id": "pbInput",
  "name": "Input",
  "template": "@pbInput.tpl.html",
  "controller": "@pbInput.ctrl.js",
  "order": "2",
  "icon": "<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 50 20'><g><path fill='#fff' d='M1,19V1h48v18H1z M0,0v20h50V0H0z M6,18v-1H5v1H6z M8,17H7v1h1V17z M7,2v1h1V2H7z M5,3h1V2H5V3z M6,3v14h1 V3H6z '/></g></svg>",
  "properties": [
    {
      "label": "Required",
      "name": "required",
      "type": "boolean",
      "defaultValue": false
    },
    {
      "label": "Value min length",
      "name": "minLength",
      "type": "integer",
      "defaultValue": ""
    },
    {
      "label": "Value max length",
      "name": "maxLength",
      "type": "integer",
      "defaultValue": ""
    },
    {
      "label": "Read-only",
      "name": "readOnly",
      "type": "boolean",
      "defaultValue": false
    },
    {
      "label": "Label hidden",
      "name": "labelHidden",
      "type": "boolean",
      "defaultValue": false
    },
    {
      "label": "Label",
      "name": "label",
      "type": "text",
      "defaultValue": "Default label",
      "showFor": "properties.labelHidden.value === false"
    },
    {
      "label": "Label position",
      "name": "labelPosition",
      "type": "choice",
      "choiceValues": [
        "left",
        "top"
      ],
      "defaultValue": "left",
      "showFor": "properties.labelHidden.value === false"
    },
    {
      "label": "Label width",
      "name": "labelWidth",
      "type": "integer",
      "defaultValue": 4,
      "showFor": "properties.labelHidden.value === false"
    },
    {
      "label": "Placeholder",
      "name": "placeholder",
      "type": "text"
    },
    {
      "label": "Value",
      "name": "value",
      "type": "text",
      "bidirectional": true
    },
    {
      "label": "Type",
      "name": "type",
      "type": "choice",
      "choiceValues": [
        "text",
        "number",
        "email",
        "password"
      ],
      "defaultValue": "text"
    },
    {
      "label": "Min value",
      "name": "min",
      "type": "integer",
      "showFor": "properties.type.value === 'number'"
    },
    {
      "label": "Max value",
      "name": "max",
      "type": "integer",
      "showFor": "properties.type.value === 'number'"
    }
  ]
}
